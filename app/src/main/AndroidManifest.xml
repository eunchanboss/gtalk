<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dldmd.gtalk">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 최초 -->
        <activity android:name=".login.Logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.Login">

        </activity>
        <activity android:name=".login.SignUp" />

        <!-- 프로필설정 -->
        <activity android:name=".profile.ProfileMarge" />
        <activity android:name=".profile.ProfileDetail" />
        <!-- 남이보는 프로필 -->
        <activity android:name=".profile.Profile" />
        <!-- 친구찾기 -->
        <activity android:name=".friend.FrAdd"/>
        <!-- 메인화면(viewPager) -->
        <activity android:name=".main.MainActivity" />
        <!-- post관련 Activity -->
        <activity android:name=".post.PostMarge" />
        <activity android:name=".post.PostDetail" />

        <!--채팅관련-->
        <activity android:name=".chat.ChatRoom" />
    </application>

</manifest>